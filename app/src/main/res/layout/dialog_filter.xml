<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMediaSelectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/visby_extra_bold"
        android:text="Sort By"
        android:textColor="@color/dark_blue_theme"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linLayout"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMediaSelectTitle">

        <Button
            android:id="@+id/btnTop"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue_theme"
            android:text="Top"
            android:textColor="@color/white"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/btnStarred"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue_theme"
            android:text="Starred"
            android:textColor="@color/white"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/btnRecent"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue_theme"
            android:text="Recents"
            android:textColor="@color/white"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/btnOldest"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue_theme"
            android:text="Oldest"
            android:textColor="@color/white"
            app:cornerRadius="50dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>